<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.summerschool.friendfinderapplication.activities.MemberListActivity" >
    <!-- top buttons -->
    <LinearLayout
        android:id="@+id/actionBar"
        style="@style/topMenu"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/topButton_one"
            style="@style/button"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.17"
            android:background="@drawable/buttonsborders"
            android:contentDescription="To main map view"
            android:src="@drawable/ic_house" />
           <!--   android:onClick="onClickHome"--> 

        <ImageButton
            android:id="@+id/topButton_two"
            style="@style/button"
            android:layout_height="match_parent"
            android:layout_weight="1.06"
            android:background="@drawable/buttonsborders"
            android:contentDescription="To Event view"
            android:src="@drawable/ic_calendar" />
            <!--  android:onClick="onClickMyEvent"--> 

        <ImageButton
            android:id="@+id/topButton_three"
            style="@style/button"
            android:layout_height="match_parent"
            android:layout_weight="0.81"
            android:background="@drawable/buttonsborders"
            android:contentDescription="To POI view"
            android:src="@drawable/ic_location" />
            <!-- android:onClick="onClickMyPoI"--> 

    </LinearLayout>
    
   <RelativeLayout
        android:id="@+id/Content"
        style="@style/content"
        android:layout_alignStart="@+id/BottomMenu"
        android:layout_below="@+id/actionBar"
        android:paddingBottom="50dp" >

	    <ListView
	        android:id="@+id/memberListView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp" >

	    </ListView>
	


	</RelativeLayout>
    
    <!-- bottom buttons -->
	<LinearLayout
        android:id="@+id/BottomMenu"
		style="@style/bottomMenu"
        android:weightSum="3" >
        
    </LinearLayout>

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.summerschool.friendfinderapplication.activities.MemberListActivity"
    android:background="@android:color/white" >
    <!-- top buttons -->
    <LinearLayout
        android:id="@+id/actionBar"
        style="@style/topMenu"
        android:weightSum="3" >

        <Button
		    android:id="@+id/topButton_one"
		    style="@style/homeButton"
		    android:contentDescription="@string/home" 
		    android:onClick="onClickHome" />

        <Button
            android:id="@+id/topButton_two"
            style="@style/eventButton"
            android:contentDescription="@string/myEvents" 
            android:onClick="onClickMyEvent"/>

        <Button
            android:id="@+id/topButton_three"
            style="@style/poiButton"
            android:contentDescription="@string/myPoI"
            android:onClick="onClickMyEvent" />

    </LinearLayout>
    
   <RelativeLayout
        android:id="@+id/Content"
        style="@style/content"
        android:layout_alignStart="@+id/BottomMenu"
        android:layout_below="@+id/actionBar"
        android:paddingBottom="50dp" >

	    <ListView
	        android:id="@+id/memberListView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp" >

	    </ListView>
	


	</RelativeLayout>
    
    <!-- bottom buttons -->
	<LinearLayout
        android:id="@+id/BottomMenu"
		style="@style/bottomMenu"
        android:weightSum="3" >
        
    </LinearLayout>

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.summerschool.friendfinderapplication.activity.MainActivity" >

    <LinearLayout
        android:id="@+id/actionBar"
		style="@style/topMenu"
        android:weightSum="3" >
        
		<ImageButton
		    android:id="@+id/topButton_one"
		    style="@style/groupButton"
		    android:contentDescription="To group list view" 
		    android:onClick="onClickGroupsButton" />

        <ImageButton
            android:id="@+id/topButton_two"
            style="@style/eventButton"
            android:contentDescription="To Event view" 
            android:onClick="onClickMyEvent"/>

        <ImageButton
            android:id="@+id/topButton_three"
            style="@style/poiButton"
            android:contentDescription="To POI view"
            android:onClick="onClickMyPoi" />

    </LinearLayout>
    
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_below="@+id/actionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp" />

    <ImageButton
        android:id="@+id/settings"
        style="@style/settingsButton"
        android:onClick="onClickMainSettings" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.summerschool.friendfinderapplication.activities.NewGroupActivity" >

    <TextView
        android:id="@+id/helloView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Group:" />

    <Button
        android:id="@+id/create_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NameLabel"
        android:layout_alignBottom="@+id/NameLabel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:onClick="onClickCreateGroupButton"
        android:text="Create" />

    <Button
        android:id="@+id/join_grou_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_group_button"
        android:layout_alignRight="@+id/create_group_button"
        android:layout_below="@+id/create_group_button"
        android:layout_marginTop="18dp"
        android:onClick="onClickJoinGroupButton"
        android:text="Join" />

    <TextView
        android:id="@+id/NameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/helloView"
        android:layout_below="@+id/helloView"
        android:layout_marginTop="32dp"
        android:text="Name:" />

    <EditText
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NameLabel"
        android:layout_below="@+id/NameLabel"
        android:layout_toLeftOf="@+id/create_group_button"
        android:ems="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>
<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="button" parent="@android:attr/buttonBarButtonStyle">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="menu" parent="@android:attr/buttonBarStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="bottomMenu" parent="menu">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">#569EFB</item>
    </style>
    
    <style name="topMenu" parent="menu">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">#DEDEDE</item>
    </style>
    
    <style name="content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="homeButton" parent="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.15</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_house</item>
        <item name="android:text">@string/home</item>
    </style>
    <style name="groupButton" parent="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.15</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_group58</item>
        <item name="android:text">Groups</item>
    </style>    
    <style name="eventButton" parent="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.15</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_calendar</item>
        <item name="android:text">Events</item>
    </style>	
    <style name="poiButton" parent="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_location</item>
        <item name="android:text">POI</item>        
    </style>	
    <style name="settingsButton" parent="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:src">@drawable/settings21</item>
    </style>	
    <style name="membersListButton" parent="button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_action_group</item>
    </style>
</resources>
